<!DOCTYPE html>
<html>
  <head>
    <title>SoleMate</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <nav>
      <ul>
        <% if user_signed_in? %>
          <li> <%= link_to 'Sign Out', destroy_user_session_path, method: :delete %> </li>
          <li> <%= link_to 'Change My User Info', edit_user_registration_path %></li>
          <li> <%= image_tag(current_user.photo) %> </li>
          <% if current_user.admin? %>
            <li> <%= link_to 'List of Users', users_path %> </li>
          <% end %>
        <%else%>
          <li><%= link_to 'Sign In', new_user_session_path %></li>
          <li><%= link_to 'Sign Up', new_user_registration_path %></li>
        <% end %>
      </ul>
        <%= form_tag(shoes_path, :method => "get", id: "search-form") do %>
          <%= text_field_tag :search, params[:search], placeholder: "Search Shoes" %>
          <%= submit_tag "Search", :name => nil %>
        <% end %>
    </nav>

    <% if notice.is_a?(Array) %>
      <% notice.each do |this_notice| %>
        <p class="notice"><%= this_notice %></p>
      <% end %>
    <%elsif notice %>
      <p class="notice"> <%= notice %></p>
    <% end %>

    <p class="alert"><%= alert %></p>

    <%= yield %>

  </body>
</html>
